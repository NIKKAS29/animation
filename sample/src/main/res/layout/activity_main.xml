<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="hub.hacktons.animation.demo.MainActivity">

    <Button
        android:id="@+id/btn_std"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:onClick="onClickAnimationDrawable"
        android:text="原生帧动画"/>

    <Button
        android:id="@+id/btn_lazy_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:onClick="onClickLazyAnimationDrawable"
        android:text="Lottie动画"/>

    <Button
        android:id="@+id/btn_lazy_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:onClick="onClickLazyAnimationDrawableXML"
        android:text="手工帧动画"/>
    <Button
        android:id="@+id/btn_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:onClick="onClickGifAnimation"
        android:text="Gif动画"/>
</LinearLayout>
